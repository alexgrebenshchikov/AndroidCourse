<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.OurAwesomeApp.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/lazure</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor"> #000 </item>
        <item name="boxStrokeWidth"> 4dp </item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint"> @color/sunshine </item>
        <item name="itemTextColor"> #fff </item>
        <item name="itemIconTint"> #fff </item>

    </style>




</resources>